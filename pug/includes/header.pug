    //login modal
    div(class="modal login-modal fade", id="loginModal" tabindex="-1", aria-labelledby="loginModalLabel", aria-hidden="true")
        div(class="modal-dialog")
            div(class="modal-content")
                div(class="modal-header")
                    h5(class="modal-title" id="loginModalLabel") login
                    button(type="button", class="btn-close btn-close-white", data-bs-dismiss="modal", aria-label="Close")
                div(class="modal-body")
                    form(class="g-3 needs-validation" action="" novalidate)
                        div(class="row")
                            div(class="col-lg-12")
                                div(class="form-group input-group flex-nowrap")
                                    div(class="input-group has-validation")
                                        i(class="input-group-text bi bi-envelope")
                                        input(type="email" class="form-control" placeholder="Email" required)
                                        div(class="invalid-tooltip")
                                            | email error
                            div(class="col-lg-12")
                                div(class="form-group input-group flex-nowrap")
                                    i(class="input-group-text bi bi-shield-lock")
                                    input(type="password" class="form-control" placeholder="Password" required)
                            div(class="col-lg-12 mb-2")
                                div(class="form-check")
                                    input(input class="form-check-input" type="checkbox" id="loginRem")
                                    label(class="form-check-label", for="loginRem")
                                        | Remember me
                            div(class="col-lg-12")
                                div(class="form-group btns")
                                    button(class="btn btn-danger" type="submit") login now
                                    button(class="forget-btn" type="button", data-bs-toggle="modal", data-bs-target="#forgetPasswordModal") Forget password?
                            div(class="col-lg-12 text-center toggle-link")
                                p Don't have an account?
